<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ar.edu.proyectosort.brewin.FermenterActivity">

    <EditText
        android:id="@+id/recipeEdit"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Estilo De Cerveza"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.097" />

    <EditText
        android:id="@+id/capacityEdit"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="110dp"
        android:hint="Capacidad (L)"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/original_gravityEdit"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="234dp"
        android:hint="Densidad Original"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/status_historyEdit"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="170dp"
        android:datePickerMode="spinner"
        android:hint="Fecha De Inicio"
        />


</android.support.constraint.ConstraintLayout>
